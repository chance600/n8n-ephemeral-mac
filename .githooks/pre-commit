#!/bin/bash

################################################################################
# n8n Pre-commit Hook âš¡
# Validates files before commits to ensure code quality and security
# Prevents committing invalid JSON, scripts with syntax errors, or sensitive data
################################################################################

set -euo pipefail

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

echo -e "${CYAN}[n8n Pre-commit Hook]${NC}"

ERROR_COUNT=0

# Check for sensitive data patterns
echo "Checking for sensitive data..."
if git diff --cached | grep -E '(API_KEY|SECRET|PASSWORD|TOKEN|PRIVATE_KEY)\s*=\s*[^=]' | grep -v '^:'; then
  echo -e "${RED}ERROR: Sensitive data detected in staged changes${NC}"
  echo "Please remove API keys, secrets, and passwords before committing"
  ERROR_COUNT=$((ERROR_COUNT + 1))
fi

# Validate JSON files
echo "Validating JSON files..."
for file in $(git diff --cached --name-only | grep '\.json$'); do
  if [[ -f "$file" ]]; then
    if ! python3 -m json.tool "$file" > /dev/null 2>&1; then
      echo -e "${RED}ERROR: Invalid JSON in $file${NC}"
      ERROR_COUNT=$((ERROR_COUNT + 1))
    fi
  fi
done

# Check shell script syntax
echo "Checking shell script syntax..."
for file in $(git diff --cached --name-only | grep -E '\.(sh|bash)$'); do
  if [[ -f "$file" ]]; then
    if ! bash -n "$file" 2>/dev/null; then
      echo -e "${RED}ERROR: Syntax error in $file${NC}"
      ERROR_COUNT=$((ERROR_COUNT + 1))
    fi
  fi
done

# Validate YAML files
echo "Validating YAML files..."
for file in $(git diff --cached --name-only | grep -E '\.(yml|yaml)$'); do
  if [[ -f "$file" ]]; then
    if command -v python3 &> /dev/null; then
      if ! python3 -c "import yaml; yaml.safe_load(open('$file'))" 2>/dev/null; then
        echo -e "${YELLOW}WARNING: YAML validation failed for $file${NC}"
      fi
    fi
  fi
done

# Check for .env files
if git diff --cached --name-only | grep -E '\.env$'; then
  echo -e "${RED}ERROR: .env files should not be committed${NC}"
  echo "Use .env.example instead and add .env to .gitignore"
  ERROR_COUNT=$((ERROR_COUNT + 1))
fi

# Check file permissions for scripts
echo "Checking script permissions..."
for file in $(git diff --cached --name-only | grep -E '\.(sh|bash)$'); do
  if [[ -f "$file" ]]; then
    if [[ ! -x "$file" ]]; then
      echo -e "${YELLOW}WARNING: $file is not executable${NC}"
    fi
  fi
done

if [[ $ERROR_COUNT -gt 0 ]]; then
  echo -e "\n${RED}Pre-commit validation failed with $ERROR_COUNT error(s)${NC}"
  echo "Please fix the errors above and try again"
  exit 1
else
  echo -e "\n${GREEN}All pre-commit checks passed!${NC}"
  exit 0
fi
